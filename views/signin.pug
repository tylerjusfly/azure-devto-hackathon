extends layout

block content

  head
  meta(charset='utf-8')
  title SignIn 
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

  body
    div.text-center
      form(action="/signin", method="post" style="max-width:300px; margin:auto;")
        h2(class="h3 mb-3") Please SignIn Here
        label(for="username", class="sr-only") Username
        input(type="text", name="Username", id="username", class="form-control mb-3", placeholder="Username")
        label(for="password", class="sr-only") Password
        input(type="password", name="Password", class="form-control mb-3", placeholder="Password")
        div.mt-3
          button(class="btn btn-lg btn-primary") SignIn



  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")

      