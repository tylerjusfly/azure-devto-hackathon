extends layout

block content

  head
  meta(charset='utf-8')
  title Create
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

  body
    div.text-center
      form(action="/dishes/dish", method="post" style="max-width:400px; margin:auto;")
        h2(class="h3 mb-4") Add Your Own Dish
        input(type="text", name="Dishname", id="dishname", class="form-control mb-3", placeholder="dish name")
        input(type="text", name="Dishdetails", id="dishdetails", class="form-control mb-3", placeholder="dish details")
        input(type="text", name="Dishpics", class="form-control mb-3", placeholder="a link to pictures")
        input(type="text", name="Videolink", class="form-control mb-3", placeholder="youtube video Link")
        div.mt-3
          button(class="btn btn-lg btn-primary") Create



  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")